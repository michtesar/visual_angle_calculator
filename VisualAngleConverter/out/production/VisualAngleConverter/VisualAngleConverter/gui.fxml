<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.GridPane?>

<?import javafx.scene.control.RadioButton?>
<?import javafx.scene.control.Button?>
<GridPane alignment="center" hgap="10" vgap="10" xmlns="http://javafx.com/javafx/8.0.112" xmlns:fx="http://javafx.com/fxml/1" fx:controller="VisualAngleConverter.Controller">
    <Label style="-fx-font-size: 20;" text="Visual Angle Converter" textAlignment="CENTER" GridPane.rowIndex="1" />
    <RadioButton fx:id="convertToggle" text="Toggle conversion" onAction="#toggle" GridPane.rowIndex="2" />
    <Label fx:id="item1" GridPane.rowIndex="3"/><TextField fx:id="value1" GridPane.rowIndex="4"/>
    <Label fx:id="item2" GridPane.rowIndex="5"/><TextField fx:id="value2" GridPane.rowIndex="6"/>
    <Label fx:id="item3" GridPane.rowIndex="7"/><TextField fx:id="value3" GridPane.rowIndex="8"/>
    <Label fx:id="item4" GridPane.rowIndex="9"/><TextField fx:id="value4" GridPane.rowIndex="10"/>
    <Button fx:id="convertButton" text="Convert" onAction="#convert" GridPane.rowIndex="11"/>
</GridPane>
